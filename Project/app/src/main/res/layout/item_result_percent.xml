<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/search_box_border"
    android:orientation="vertical"
    android:layout_margin="4dp"
    android:padding="8dp">

    <TextView
        android:id="@+id/tvQuestionContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Question content 1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPercent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="6%"
            android:layout_gravity="center"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvPercent1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="6%"
            android:layout_gravity="center"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvPercent2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="6%"
            android:layout_gravity="center"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvPercent3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="6%"
            android:layout_gravity="center"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvPercent4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="6%"
            android:layout_gravity="center"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>